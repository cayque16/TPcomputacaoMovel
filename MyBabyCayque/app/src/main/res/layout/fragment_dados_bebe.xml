<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufop.cayque.mybabycayque.DadosBebeFragment"
    android:layout_margin="8dp">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/edtNomeBebe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do bebÃª..."
        android:inputType="text" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento: " />

    <DatePicker
        android:id="@+id/dateNasci"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sexo: " />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonMasc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masculino" />


            <RadioButton
                android:id="@+id/radioButtonFem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feminino" />

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDadosBebeSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botao_personalizado_salvar"
            android:text="Salvar"
            android:textColor="#FFFFFF"
            android:onClick="salvaBebe"/>

        <Button
            android:id="@+id/btnDadosBebeCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botao_personalizado_cancelar"
            android:text="Cancelar"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</LinearLayout>
