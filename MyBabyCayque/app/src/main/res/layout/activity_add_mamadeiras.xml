<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufop.cayque.mybabycayque.add.AddMamadeirasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDadosAddMamadaSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botao_salvar"
            android:text="Salvar"
            android:onClick="salvaMamada"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnDadosAddMamadaCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/botao_cancelar"
            android:text="Cancelar"
            android:onClick="cancelaMamada"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
